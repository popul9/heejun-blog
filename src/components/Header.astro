---
import {
	getLangFromUrl,
	getLocalizedPathname,
	useTranslations,
} from "../i18n/utils";
import HeaderLink from "./HeaderLink.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const localizedHome = getLocalizedPathname("/", lang);
const localizedDeveloper = getLocalizedPathname("/developer", lang);
const localizedroamer = getLocalizedPathname("/roamer", lang);
const localizedMelophile = getLocalizedPathname("/melophile", lang);
const localizedFoodie = getLocalizedPathname("/foodie", lang);
---

<header>
	<nav>
		<div class="top-row">
			<h2><a href={localizedHome}>{t("site.title")}</a></h2>
			<div>{t("site.subtitle")}</div>
			<div class="social-links">
				<a
					href="https://www.linkedin.com/in/heejun-moon-dev/"
					target="_blank"
					class="social-link social-link--linkedin"
				>
					<span class="sr-only">Connect with me on LinkedIn</span>
					<svg
						viewBox="0 0 16 16"
						aria-hidden="true"
						width="32"
						height="32"
						><path
							fill="currentColor"
							d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
						></path>
					</svg>
				</a>
				<a
					href="https://github.com/popul9"
					class="social-link social-link--github"
					target="_blank"
				>
					<span class="sr-only">Visit my GitHub</span>
					<svg
						viewBox="0 0 16 16"
						aria-hidden="true"
						width="32"
						height="32"
						><path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
			</div>
		</div>

		<div class="internal-links">
			<HeaderLink href={localizedHome}>{t("nav.wonderer")}</HeaderLink>
			<HeaderLink href={localizedDeveloper}
				>{t("nav.developer")}</HeaderLink
			>
			<HeaderLink href={localizedroamer}>{t("nav.roamer")}</HeaderLink>
			<HeaderLink
				href={localizedMelophile}
				data-title="Coming Soon"
				class="disabled-link"
				onclick="return false;"
			>
				{t("nav.melophile")}
			</HeaderLink>
			<HeaderLink href={localizedFoodie}>{t("nav.foodie")}</HeaderLink>
		</div>

		<style>
			header {
				margin: 0;
				padding: 0.5em 1em;
				background: white;
				box-shadow: 0 2px 8px rgba(var(--black), 5%);
			}

			nav {
				height: 100%;
				display: flex;
				flex-direction: column;
				justify-content: space-between;
			}

			.top-row {
				display: flex;
				justify-content: space-between;
				align-items: flex-start;
			}

			h2 {
				margin: 0;
				font-size: 1em;
			}

			h2 a,
			h2 a.active {
				text-decoration: none;
			}

			.internal-links {
				display: flex;
				justify-content: center;
				align-items: flex-end;
				gap: 0.5em;
			}

			nav a {
				color: var(--black);
				text-decoration: none;
			}

			.internal-links a {
				padding: 0.3em 0.2em;
				font-size: 0.9em;
				border-bottom: none;
				position: relative;
			}

			.internal-links a::after {
				content: "";
				position: absolute;
				bottom: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 0;
				height: 3px;
				background-color: transparent;
				transition: width 0.3s ease;
			}

			.internal-links a.active::after {
				width: 100%;
				max-width: 30px;
				background-color: var(--accent);
			}

			.internal-links a:hover::after {
				width: 100%;
				max-width: 30px;
				background-color: var(--accent);
			}

			.social-links,
			.social-links a {
				display: flex;
				gap: 1em;
			}

			.social-link {
				transition: all 0.2s ease-in-out;
			}

			.social-link--linkedin:hover {
				color: #0a66c2;
			}

			.social-link--github:hover {
				color: #24292f;
			}

			.social-link:hover {
				transform: translateY(-2px);
			}

			.disabled-link {
				color: #999;
				cursor: default;
				opacity: 0.6;
				text-decoration: none;
			}
			.disabled-link:hover::before {
				content: attr(data-title);
				position: absolute;
				bottom: -80%;
				left: 50%;
				transform: translateX(-50%);
				background: #333;
				color: #fff;
				padding: 4px 8px;
				border-radius: 4px;
				font-size: 12px;
				white-space: nowrap;
				z-index: 10;
			}

			.disabled-link:hover {
				opacity: 0.8;
			}
			.disabled-link:hover::after {
				display: none;
			}

			@media (max-width: 720px) {
				.social-links {
					display: none;
				}
				.internal-links {
					flex-wrap: wrap;
					gap: 0.3em;
				}
				.internal-links a {
					font-size: 0.8em;
					padding: 0.2em 0.15em;
				}
			}

			@media (prefers-color-scheme: dark) {
				.social-link {
					color: white;
				}

				.social-link--github:hover {
					color: #c9d1d9;
				}
			}
		</style>
	</nav>
</header>
