---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname;
const urlParts = pathname.split("/").filter(Boolean);
const firstSegment = urlParts[0];

if (firstSegment === "ko" || firstSegment === "en") {
	urlParts.shift();
}

const activePathname = "/" + urlParts.join("/");
const subpath = urlParts[0] || "";

// Strip lang prefix from href for comparison too
let hrefParts = String(href ?? "")
	.split("/")
	.filter(Boolean);
if (hrefParts[0] === "ko" || hrefParts[0] === "en") {
	hrefParts.shift();
}
const normalizedHref = "/" + hrefParts.join("/");

const isActive =
	normalizedHref === activePathname ||
	normalizedHref === activePathname + "/" ||
	normalizedHref === "/" + subpath;
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
